<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="This is Home Page"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="95dp" />

    <Button
        android:id="@+id/notificbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendTestNotification"
        android:text="Send Notification"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />
    <Button
        android:id="@+id/notificbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendTestIdentifiedNotification"
        android:text="Send Identified Notification"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />

    <Button
        android:id="@+id/notificbutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendTestBackgroundNotification"
        android:text="Send Background Notification"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />

    <Button
        android:id="@+id/notificbutton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RemoveTestBackgroundNotification"
        android:text="Remove Background Notification"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />

    <Button
        android:id="@+id/notificbutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="redirectToNotificationPage"
        android:text="Go to notifications"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />

    <Button
        android:id="@+id/notificbutton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Sign Out"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="430dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>