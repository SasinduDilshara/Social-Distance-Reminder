<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social_Distance_Reminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_Blue_800_light</item>
        <item name="colorPrimaryVariant">@color/light_Blue_800_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_400</item>
        <item name="colorSecondaryVariant">@color/orange_400_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NotificationCard">
        <item name="android:backgroundTint">@color/light_Blue_800_lighter</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="NotificationCardTitle">
        <item name="android:textColor">@color/orange_400_dark</item>
    </style>

    <style name="NotificationCardText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DashboardCardType1">
        <item name="android:backgroundTint">@color/light_Blue_800_lighter</item>
    </style>

    <style name="DashboardCardType2">
        <item name="android:backgroundTint">@color/light_Blue_800_light</item>
    </style>
</resources>