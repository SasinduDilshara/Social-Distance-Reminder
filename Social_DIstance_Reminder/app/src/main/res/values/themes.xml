<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social_Distance_Reminder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_Blue_800</item>
        <item name="colorPrimaryVariant">@color/light_Blue_800_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_400_dark</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- POPUP -->
        <item name="popupBackgroundColor">@color/popup_light_background</item>
        <item name="popupDefaultTextColor">@color/dark_background</item>
        <item name="popupTitleTextColor">@color/orange_400_dark</item>
        <item name="popupTitleTextSize">@dimen/popup_title_text_size</item>
        <item name="popupElevation">@dimen/popup_elevation</item>
        <item name="popupCornerRadius">@dimen/popup_corner_radius</item>
        <item name="popupPadding">@dimen/popup_padding</item>

        <!-- BUTTONS -->
        <item name="accentButtonBackgroundColor">@color/accent_button</item>
        <item name="accentButtonTextColor">@color/accent_button_text</item>
        <item name="primaryButtonBackgroundColor">@color/primary_button</item>
        <item name="primaryButtonTextColor">@color/primary_button_text</item>

    </style>

    <style name="NotificationCardDefault">
        <item name="android:backgroundTint">@color/light_Blue_800_light</item>
    </style>

    <style name="NotificationCardImportant">
        <item name="android:backgroundTint">@color/orange_400_light</item>
    </style>

    <style name="NotificationCardTitleDefault">
        <item name="android:textColor">@color/light_Blue_800_dark</item>
    </style>

    <style name="NotificationCardTitleImportant">
        <item name="android:textColor">@color/orange_400_dark</item>
    </style>

    <style name="NotificationCardText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DashboardCardType1">
        <item name="android:backgroundTint">@color/light_Blue_800</item>
    </style>

    <style name="DashboardCardType2">
        <item name="android:backgroundTint">@color/light_Blue_800_dark</item>
    </style>

    <style name="AccentButton">
        <item name="android:backgroundTint">@color/orange_400</item>
    </style>

    <style name="Theme.Social_Distance_Reminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Social_Distance_Reminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Social_Distance_Reminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>