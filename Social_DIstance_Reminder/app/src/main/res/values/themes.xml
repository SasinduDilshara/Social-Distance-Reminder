<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Social_Distance_Reminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_Blue_800</item>
        <item name="colorPrimaryVariant">@color/light_Blue_800_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_400_light</item>
        <item name="colorSecondaryVariant">@color/orange_400_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen">
        <item name="android:src">@drawable/distanzia_cover_foreground_light</item>
    </style>

    <style name="Theme.Social_Distance_Reminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Social_Distance_Reminder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Social_Distance_Reminder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>